<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutItemSearch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_shade_of_gray"
    android:paddingStart="@dimen/space_ten"
    android:paddingTop="@dimen/space_ten"
    android:paddingEnd="@dimen/hz_space">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleItemSearch"
        style="@style/TextStyleRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:maxLines="2"
        android:paddingBottom="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="dummy address in parallel universe. This should be two line address" />

    <View
        android:id="@+id/viewItemSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>